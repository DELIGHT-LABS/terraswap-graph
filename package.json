{
  "name": "terraswap-graph",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "main": "src/main.ts",
  "scripts": {
    "collect": "NODE_ENV=production node --stack_size=4096 --max-old-space-size=4096 -r ts-node/register/transpile-only -r tsconfig-paths/register src/collector/main.ts",
    "migration-gen": "node --require ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -c migration -d src/orm/migrations -n",
    "migration-revert": "node --require ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -c migration",
    "migration-run": "node --require ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -c migration -d src/orm/migrations",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --fix",
    "test": "npm test"
  },
  "dependencies": {
    "@sentry/node": "^6.9.0",
    "@terra-money/hive": "^0.1.0",
    "@terra-money/log-finder": "^1.1.4",
    "@types/eslint": "^7.28.0",
    "bluebird": "^3.7.2",
    "date-fns-timezone": "^0.1.4",
    "graphql-request": "^3.4.0",
    "lodash": "^4.17.21",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.34",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.33",
    "@types/koa": "^2.13.4",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.3.2",
    "@types/node-fetch": "^2.5.11",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "koa": "^2.13.1",
    "lint-staged": "^11.0.1",
    "nodemon": "^2.0.12",
    "prettier": "2.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "parser": "typescript",
    "printWidth": 100,
    "singleQuote": true,
    "semi": false
  }
}
